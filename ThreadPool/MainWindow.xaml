<Window x:Class="ThreadPool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadPool"
        mc:Ignorable="d"
        Title="MainWindow" Height="140" Width="300">
    <StackPanel>
        <UniformGrid Rows="2" Margin="10 10">
            <TextBlock Text="Words" HorizontalAlignment="Center"/>
            <TextBlock Text="Lines" HorizontalAlignment="Center"/>
            <TextBlock Text="Punctuations" HorizontalAlignment="Center"/>

            <TextBlock x:Name="wordsTb" HorizontalAlignment="Center"/>
            <TextBlock x:Name="linesTb" HorizontalAlignment="Center"/>
            <TextBlock x:Name="punctuationTb" HorizontalAlignment="Center"/>
        </UniformGrid>
        
        <TextBox x:Name="tbx" Margin="0 0 0 10"/>
        <Button Click="SubmitButton">Submit</Button>
    </StackPanel>
</Window>