<Window x:Class="Task___hw__4__5_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task___hw__4__5_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Cascadia Code">
    <StackPanel Margin="20">
        <TextBlock Text="Task - hw (4, 5)" FontSize="30" HorizontalAlignment="Center"/>

        <StackPanel Width="300" Margin="0 40 0 0">
            <TextBlock Text="Source" FontSize="15"/>
            <TextBox x:Name="sourceTBX" FontSize="13" VerticalContentAlignment="Bottom" Margin="0 2 0 0"/>

            <TextBlock Text="Copy directory" FontSize="15" Margin="0 8 0 0"/>
            <TextBox x:Name="copyTBX" FontSize="13" VerticalContentAlignment="Bottom" Margin="0 2 0 0"/>
        </StackPanel>

        <Button Content="Start" Width="300" Margin="0 20 0 0" Click="StartClick"/>
        <CheckBox x:Name="CBX" Content="Show log" VerticalContentAlignment="Bottom" HorizontalAlignment="Center" Margin="0 2 0 0"/>
    </StackPanel>
</Window>