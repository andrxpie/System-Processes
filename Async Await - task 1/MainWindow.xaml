<Window x:Class="Async_Await___task_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Async_Await___task_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Cascadia Code" Background="Black">
    <DockPanel Margin="10">
        <DockPanel Margin="0 10" DockPanel.Dock="Top">
            <Button Margin="10 0 0 0" DockPanel.Dock="Right" Background="Black" Foreground="White" Click="GetFactorialBtn">Calculate</Button>
            <TextBox x:Name="tbx" Background="Black" Foreground="White"/>
        </DockPanel>

        <ListBox x:Name="list"/>
    </DockPanel>
</Window>
